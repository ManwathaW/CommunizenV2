<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="CommuniZEN.Views.AwarenessPage"
             BackgroundColor="White">

    <ContentPage.Resources>
        <ResourceDictionary>

            <Style TargetType="Frame" x:Key="CardStyle">
                <Setter Property="BackgroundColor" Value="#E6F3FF"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <Style TargetType="Label" x:Key="HeaderStyle">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#2B2B2B"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>

            <Style TargetType="Label" x:Key="SubHeaderStyle">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="#666666"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">
            <!-- Header remains the same -->

            <!-- Resource Cards Grid -->
            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto,Auto"
                  RowSpacing="15" 
                  ColumnSpacing="15">

                <!-- Anxiety Card -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="#E6F3FF"
                       CornerRadius="10"
                       HasShadow="True">
                    <Grid>
                        <skia:SKLottieView
                            Source="axiety.json"
                            RepeatCount="-1"
                            HeightRequest="80"
                            WidthRequest="80"
                            HorizontalOptions="Center"
                            VerticalOptions="Start"
                            Margin="0,0,0,10"/>
                        <VerticalStackLayout Margin="0,90,0,0">
                            <Label Text="Anxiety"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#2B2B2B"/>
                            <Label Text="Watch fun video about anxiety here"
                                   FontSize="16"
                                   TextColor="#666666"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Depression Card -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="#E6F3FF"
                       CornerRadius="10"
                       HasShadow="True">
                    <Grid>
                        <skia:SKLottieView
                            Source="depression.json"
                            RepeatCount="-1"
                            HeightRequest="80"
                            WidthRequest="80"
                            HorizontalOptions="Center"
                            VerticalOptions="Start"
                            Margin="0,0,0,10"/>
                        <VerticalStackLayout Margin="0,90,0,0">
                            <Label Text="Depression"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#2B2B2B"/>
                            <Label Text="Watch fun video about depression here"
                                   FontSize="16"
                                   TextColor="#666666"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Stress Card -->
                <Frame Grid.Row="1" Grid.Column="0"
                       BackgroundColor="#E6F3FF"
                       CornerRadius="10"
                       HasShadow="True">
                    <Grid>
                        <skia:SKLottieView
                            Source="Stress.json"
                            RepeatCount="-1"
                            HeightRequest="80"
                            WidthRequest="80"
                            HorizontalOptions="Center"
                            VerticalOptions="Start"
                            Margin="0,0,0,10"/>
                        <VerticalStackLayout Margin="0,90,0,0">
                            <Label Text="Stress"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#2B2B2B"/>
                            <Label Text="Watch fun video about stress here"
                                   FontSize="16"
                                   TextColor="#666666"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Well-being Card -->
                <Frame Grid.Row="1" Grid.Column="1"
                       BackgroundColor="#E6F3FF"
                       CornerRadius="10"
                       HasShadow="True">
                    <Grid>
                        <skia:SKLottieView
                            Source="welbeing.json"
                            RepeatCount="-1"
                            HeightRequest="80"
                            WidthRequest="80"
                            HorizontalOptions="Center"
                            VerticalOptions="Start"
                            Margin="0,0,0,10"/>
                        <VerticalStackLayout Margin="0,90,0,0">
                            <Label Text="Well-being"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#2B2B2B"/>
                            <Label Text="Watch fun video about well-being here"
                                   FontSize="16"
                                   TextColor="#666666"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </Grid>

            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   Margin="0,20,0,0">
                <VerticalStackLayout>
                    <Label Text="Resource Information"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#2B2B2B"/>
                    <Label Text="More information here..."
                           FontSize="16"
                           TextColor="#666666"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Contact Information -->
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   Margin="0,10,0,20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Contact Information"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#2B2B2B"/>

                    <!-- Support Email -->
                    <Label Text="Support Email: mokgaetjimashabela@gmail.com"
                           FontSize="16"
                           TextColor="#666666">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SendEmailCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- Phone Numbers -->
                    <Label Text="Phone: 0724864572"
                           FontSize="16"
                           TextColor="#FF0000">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CallPhoneCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Need Immediate Help?"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2B2B2B"/>

                    <Label Text="General Emergency Number: 112"
                           FontSize="16"
                           TextColor="#FF0000"/>

                    <Label Text="SADAG HelpLine: 080 045 6789"
                           FontSize="16"
                           TextColor="#FF0000"/>

                    <Label Text="ChildLine South Africa: 08000 55 555"
                           FontSize="16"
                           TextColor="#FF0000"/>

                    <Label Text="GBV Command Centre: 0800 428 428"
                           FontSize="16"
                           TextColor="#FF0000"/>

                    <Label Text="Send SMS: 315131"
                           FontSize="16"
                           TextColor="#FF0000"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>