<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CommuniZEN"
             xmlns:converters="clr-namespace:CommuniZEN.Converters"
             x:Class="CommuniZEN.App">


    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="TabBarSelectedColor">#4B89DC</Color>
            <Color x:Key="TabBarUnselectedColor">#95A5A6</Color>

            <!-- Colors -->
            <Color x:Key="Primary">#1976D2</Color>
            <Color x:Key="PrimaryLight">#E3F2FD</Color>
            <Color x:Key="Gray100">#F5F5F5</Color>

            <!-- Converters -->
            <converters:MessageBackgroundConverter x:Key="MessageBackgroundConverter"/>
            <converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter"/>
            <converters:MessageTextColorConverter x:Key="MessageTextColorConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:IsNullConverter x:Key="IsNullConverter"/>
            <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
            <converters:DateTimeConverter x:Key="DateTimeConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
